<script>
    // 获取小方框元素
    const boxSmall = document.querySelector('.box-small');

    // 监听鼠标触摸事件
    boxSmall.addEventListener('mouseenter', () => {
        // 将小方框变成圆形
        boxSmall.style.borderRadius = '50%';
    });

    // 监听鼠标移出事件
    boxSmall.addEventListener('mouseleave', () => {
        // 将圆形变回原来的方框
        boxSmall.style.borderRadius = '0';
    });
</script>

